{
  "name": "booking-engine-server",
  "version": "1.0.0",
  "description": "Backend API server for Cloudbeds booking engine",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "db:init": "node -e \"require('./database/db').initDatabase()\"",
    "db:sync": "node -e \"require('./database/sync-service').runFullSync().then(() => process.exit())\""
  },
  "dependencies": {
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "resend": "^6.6.0",
    "sql.js": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
