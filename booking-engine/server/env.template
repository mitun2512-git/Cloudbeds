# =====================================================
# Hennessey Estate Booking Engine - Server Configuration
# =====================================================
# Copy this file to .env and fill in your values

# ---------------------
# REQUIRED - Cloudbeds API
# ---------------------
# Get these from https://developers.cloudbeds.com/
CLOUDBEDS_ACCESS_TOKEN=cbat_your_access_token_here
CLOUDBEDS_PROPERTY_ID=your_property_id_here

# ---------------------
# REQUIRED - AI Features
# ---------------------
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ---------------------
# Server Configuration
# ---------------------
PORT=3001
NODE_ENV=development

# CORS - Allow requests from frontend
# In development: http://localhost:3000
# In production: https://hennesseyestate.com
CORS_ORIGIN=http://localhost:3000

# ---------------------
# OPTIONAL - Email Marketing (Resend)
# ---------------------
# Sign up free at https://resend.com
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Verified sender email address
# Free tier: use onboarding@resend.dev
# Paid: verify your domain and use yourname@yourdomain.com
RESEND_FROM_ADDRESS=onboarding@resend.dev

# ---------------------
# OPTIONAL - Stripe Payments
# ---------------------
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
